{
    "compilerOptions":{
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist/",
        "sourceMap": true,
        "watch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@*": [
                "src/*"
            ]
        }    
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}